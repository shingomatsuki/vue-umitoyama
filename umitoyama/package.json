{
  "name": "umitoyama",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "umitoyama",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "setup": "yarn clean && yarn copyassets && yarn copystatic",
    "clean": "mkdir -p public && rm -rf public/*",
    "copyassets": "cp -R functions/nuxt/dist/ public/assets",
    "copystatic": "cp -R static/* public",
    "serve": "firebase serve --only hosting,functions",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@nuxtjs/markdownit": "^1.2.6",
    "@nuxtjs/pwa": "^3.0.0-beta.16",
    "firebase": "^6.4.2",
    "firebase-tools": "^7.2.2",
    "node-sass": "^4.12.0",
    "nuxt": "^2.8.0",
    "sass-loader": "^7.1.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^1.1.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^4.19.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^4.0.0"
  }
}
